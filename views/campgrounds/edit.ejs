<% include ../partials/header %>
<div class="container">
    <div class="">
        <h1 class="content">Edit Campground</h1>
        <div class="campground-form">
        <form action="/campgrounds/<%= id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" name="campground[name]" type="text" value="<%= campground.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" name="campground[price]" type="text" value="<%= campground.price %>">
            </div>            
            <div class="form-group">
                <input class="form-control" name="campground[image]" type="text" value="<%= campground.image %>">
            </div>
            <div class="form-group">
                <input class="form-control" name="campground[description]" type="text" value="<%= campground.description %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <div class="rw">
            <div class="col-xs-3"></div>
            <div class="col-xs-6"><a class="btn btn-default btn-block btn-xs" href="/campgrounds/">Go Back</a></div>
            <div class="col-xs-3"></div>
        </div>

        </div>
        
    </div>
</div>
<% include ../partials/footer %>